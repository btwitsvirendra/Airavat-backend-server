# =============================================================================
# AIRAVAT B2B MARKETPLACE - ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in the values
# =============================================================================

# Application
NODE_ENV=development
PORT=5000
API_VERSION=v1
APP_NAME=Airavat
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/airavat_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=32-character-encryption-key-here

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=airavat-uploads

# Razorpay (Payments)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# Email (SMTP / SendGrid / AWS SES)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Airavat <noreply@airavat.com>"

# SMS (MSG91 / Twilio)
SMS_PROVIDER=msg91
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=AIRAVT
MSG91_TEMPLATE_ID=your-template-id

# Shiprocket (Logistics)
SHIPROCKET_EMAIL=your-email@company.com
SHIPROCKET_PASSWORD=your-shiprocket-password
SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1/external

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nxxxxx\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# GST APIs (GSP Provider - ClearTax/Masters India)
GST_API_URL=https://api.gst-provider.com
GST_API_KEY=your-gst-api-key
GST_API_SECRET=your-gst-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Sentry (Error Tracking)
SENTRY_DSN=https://xxxx@sentry.io/xxxx

# Feature Flags
FEATURE_RFQ_ENABLED=true
FEATURE_CHAT_ENABLED=true
FEATURE_PROMOTIONS_ENABLED=true
FEATURE_BNPL_ENABLED=false

# Admin
SUPER_ADMIN_EMAIL=admin@airavat.com
SUPER_ADMIN_PASSWORD=change-this-password
